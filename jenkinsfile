pipeline {
   agent any
   stage('Setup') {
      steps {
        // Create and activate a virtual environment
        sh 'python3 -m venv env'
        sh 'source env/bin/activate'
        //sh 'pip install -r requirements.txt'
      }
   }
   stages {
      stage (version){
         steps {
	   sh "python3 --version"
	   }
      }
      stage ('Run puthon script'){
	    steps {
		  script {
		    //Run python script and save output in a file
			sh "python3 script1.py"
		  }
	    }
	  }
    }
}	
